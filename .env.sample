# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/voices_kunqu_dev"
DATABASE_CONNECTION_LIMIT="10"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret-32-chars-minimum-for-security"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI API Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORGANIZATION="org-your-organization-id"

# AWS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="voices-kunqu-assets-dev"

# External Services
SENTRY_DSN="https://your-sentry-dsn-here"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="voices-of-kunqu"

# Cultural Content
CULTURAL_EXPERT_EMAIL="expert@voices-of-kunqu.org"
CULTURAL_CONTENT_WEBHOOK="https://your-webhook-url"

# Monitoring
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
GOOGLE_ANALYTICS_ID="G-your-google-analytics-id"

# Security
ALLOWED_HOSTS="localhost:3000,127.0.0.1:3000"
CSRF_TRUSTED_ORIGINS="http://localhost:3000"

# Performance
ENABLE_PERFORMANCE_MONITORING="true"
MAX_AUDIO_CACHE_SIZE="100"
AUDIO_CDN_URL="http://localhost:3000"

# Feature Flags
ENABLE_COMMUNITY_FEATURES="true"
ENABLE_EXPERT_DASHBOARD="true"
ENABLE_ANALYTICS="false"
MAINTENANCE_MODE="false"

# Development
NODE_ENV="development"
LOG_LEVEL="info"