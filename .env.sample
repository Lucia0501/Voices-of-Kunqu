# Voices of Kunqu Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/voices_of_kunqu?schema=public"
POSTGRES_PRISMA_URL="postgresql://username:password@localhost:5432/voices_of_kunqu?schema=public&pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://username:password@localhost:5432/voices_of_kunqu?schema=public"

# Redis Cache Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# OpenAI API Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORGANIZATION=""

# AWS S3 Configuration for Audio Storage
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="voices-of-kunqu-audio"
AWS_CLOUDFRONT_DOMAIN="your-cloudfront-distribution.cloudfront.net"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration (Optional)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@voices-of-kunqu.org"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Cultural Content Configuration
CULTURAL_EXPERT_APPROVAL_REQUIRED="true"
TRANSLATION_QUALITY_THRESHOLD="0.8"
TTS_COST_LIMIT_MONTHLY="500"

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://voices-of-kunqu.org"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Feature Flags
ENABLE_COMMUNITY_DISCUSSIONS="true"
ENABLE_EXPERT_CONTRIBUTIONS="true"
ENABLE_ANALYTICS_TRACKING="true"
ENABLE_OFFLINE_SUPPORT="true"

# Development Settings
NODE_ENV="development"
LOG_LEVEL="debug"
ENABLE_MOCK_TTS="false"